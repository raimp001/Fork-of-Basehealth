# =============================================================================
# BaseHealth Environment Variables
# =============================================================================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/basehealth"

# NextAuth
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# PRIVY - Wallet-as-Login Authentication
# =============================================================================
# Get these from https://console.privy.io/

# Required: Your Privy App ID
NEXT_PUBLIC_PRIVY_APP_ID="your-privy-app-id"

# Required for server-side auth verification
PRIVY_APP_SECRET="your-privy-app-secret"

# Optional: Environment (development|production)
NEXT_PUBLIC_PRIVY_ENV="development"

# =============================================================================
# PAYMENTS
# =============================================================================

# Base Network
NEXT_PUBLIC_USE_MAINNET="false"
NEXT_PUBLIC_PAYMENT_RECIPIENT_ADDRESS="0xYourWalletAddress"

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."

# Coinbase CDP
COINBASE_CDP_API_KEY="your-coinbase-cdp-key"
COINBASE_CDP_API_SECRET="your-coinbase-cdp-secret"

# =============================================================================
# ATTESTATIONS
# =============================================================================

# Private key for signing attestations (Base chain)
ATTESTATION_PRIVATE_KEY="0x..."

# EAS Schema UIDs (register once, then set here)
EAS_SCHEMA_UID_MAINNET=""
EAS_SCHEMA_UID_SEPOLIA=""

# =============================================================================
# VERIFICATION SERVICES
# =============================================================================

# SAM.gov API (for debarment checks)
SAM_GOV_API_KEY="your-sam-gov-api-key"

# =============================================================================
# EMAIL
# =============================================================================

# Resend (for email notifications)
RESEND_API_KEY="re_..."
FROM_EMAIL="noreply@basehealth.xyz"
ADMIN_EMAIL="admin@basehealth.xyz"

# =============================================================================
# AI / LLM
# =============================================================================

OPENAI_API_KEY="sk-..."

# OpenClaw Agent Gateway (optional, enables multi-agent routing in /chat)
OPENCLAW_API_KEY="oc_..."
# If using a self-hosted OpenClaw Gateway, use its OpenAI-compatible token:
OPENCLAW_GATEWAY_TOKEN=""
OPENCLAW_GATEWAY_URL="https://gateway.openclaw.ai"
OPENCLAW_MODEL="gpt-4o-mini"
# Optional per-agent model overrides:
# OPENCLAW_MODEL_GENERAL="gpt-4o-mini"
# OPENCLAW_MODEL_SCREENING="gpt-4o-mini"
# OPENCLAW_MODEL_CARE="gpt-4o-mini"
# OPENCLAW_MODEL_BILLING="gpt-4o-mini"

# =============================================================================
# WALLET CONNECT
# =============================================================================

NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="your-walletconnect-project-id"

# =============================================================================
# ASSISTANT PASS (Chat Revenue)
# =============================================================================

# Enable/disable chat paywall (default: true)
BASEHEALTH_CHAT_PAYWALL="true"

# Server-side pricing/validity (defaults: $0.25 for 24h if omitted)
BASEHEALTH_ASSISTANT_PASS_USD="0.25"
BASEHEALTH_ASSISTANT_PASS_HOURS="24"

# Client-side display (defaults to 0.25 if omitted)
NEXT_PUBLIC_ASSISTANT_PASS_USD="0.25"
